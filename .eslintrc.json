{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "quote-props": "off",
    "semi": ["error", "always"]
  },
  "globals": {
    "module": true,
    "_": true
  }
}
